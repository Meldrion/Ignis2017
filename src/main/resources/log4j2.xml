<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
    <Appenders>
        <Console name="STDOUT" routingCode="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p - [%c{1}] - [%l] - %m %n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="org" level="info" additivity="true">
            <AppenderRef ref="STDOUT"/>
        </Logger>
        <Root level="trace" additivity="true">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>